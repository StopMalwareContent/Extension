{
  "manifest_version": 3,
  "name": "Stop Malware Content",
  "version": "1.4.5",

  "description": "Alerts you when you attempt to visit suspicious or harmful websites.",

  "developer": {
    "name": "Lodine Software",
    "url": "https://stopmalwarecontent.lodine.xyz"
  },

  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2.png",
    "128": "icons/icon@3.png"
  },

  "permissions": ["tabs"],

  "host_permissions": ["https://smc-api.lodine.xyz/*"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{f58788c2-383d-4453-9e7d-afdcca0c9e65}"
    }
  }
}
